<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowser" parallel="tests" thread-count="6">
<listeners>
		<listener class-name="com.mystore.utility.ListenersClass"></listener>
	</listeners>
  <test name="Chrome-Test">
  <parameter name="browser" value="Chrome"></parameter>
    <classes>   
      <class name="com.mystore.testcases.IndexPageTests"/>
    </classes>
  </test> <!-- Test -->
  
   <test name="Firefox-Test">
  <parameter name="browser" value="Firefox"></parameter>
    <classes>   
      <class name="com.mystore.testcases.IndexPageTests"/>
    </classes>
  </test> <!-- Test -->
  
   <test name="MicroSoftEdge">
  <parameter name="browser" value="MicrosoftEdge"></parameter>
    <classes>   
      <class name="com.mystore.testcases.IndexPageTests"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
